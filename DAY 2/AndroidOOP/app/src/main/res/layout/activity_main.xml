<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp">

            <TextView
                android:id="@+id/headerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Objek Nasabah"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/userImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/headerText"
                app:srcCompat="@drawable/user" />

            <LinearLayout
                android:id="@+id/profileLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:orientation="vertical"
                android:layout_below="@id/userImage">

                <TextView
                    android:id="@+id/namaTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama: " />
                <TextView
                    android:id="@+id/alamatTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat: " />
                <TextView
                    android:id="@+id/passTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Password: " />
                <TextView
                    android:id="@+id/tokenTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Token: " />
                <TextView
                    android:id="@+id/saldoTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Saldo: " />
                <TextView
                    android:id="@+id/aktifTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aktif? -- " />
            </LinearLayout>

            <TextView
                android:id="@+id/refreshTV"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/floatingButton"
                android:background="@drawable/bt_gradient"
                android:layout_below="@id/profileLinearLayout"
                android:text="Refresh"
                android:textSize="16sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
<!--            Field Nama Lengkap-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/star" />
                <EditText
                    android:id="@+id/namaET"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="27dp"
                    android:hint="Nama Lengkap"
                    android:textSize="16sp" />
                <Button
                    android:id="@+id/setNamaBtn"
                    android:layout_marginRight="16dp"
                    android:layout_width="91dp"
                    android:layout_height="wrap_content"
                    android:text="Set" />
            </LinearLayout>

<!--            Field Alamat-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/star" />
                <EditText
                    android:id="@+id/alamatET"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="27dp"
                    android:hint="Alamat"
                    android:textSize="16sp" />
                <Button
                    android:id="@+id/setAlamatBtn"
                    android:layout_width="91dp"
                    android:layout_marginRight="16dp"
                    android:layout_height="wrap_content"
                    android:text="Set" />
            </LinearLayout>

<!--            Field Password-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/star" />
                <EditText
                    android:id="@+id/passET"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="27dp"
                    android:hint="Password"
                    android:textSize="16sp" />
                <Button
                    android:layout_marginRight="16dp"
                    android:id="@+id/setPassBtn"
                    android:layout_width="91dp"
                    android:layout_height="wrap_content"
                    android:text="Set" />
            </LinearLayout>

<!--            Field Token-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/star" />
                <EditText
                    android:id="@+id/tokenET"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="27dp"
                    android:hint="Token"
                    android:textSize="16sp" />
                <Button
                    android:layout_marginRight="16dp"
                    android:id="@+id/setTokenBtn"
                    android:layout_width="91dp"
                    android:layout_height="wrap_content"
                    android:text="Set" />
            </LinearLayout>

<!--            Field Saldo-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/star" />
                <EditText
                    android:id="@+id/saldoET"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="27dp"
                    android:hint="Saldo"
                    android:textSize="16sp" />
                <Button
                    android:id="@+id/setSaldoBtn"
                    android:layout_width="91dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:text="Set" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <Button
                android:id="@+id/resetPassBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/medTurquoise"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Reset Password" />
            <Button
                android:id="@+id/promoBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:background="@color/medTurquoise"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:text="Promotion" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>