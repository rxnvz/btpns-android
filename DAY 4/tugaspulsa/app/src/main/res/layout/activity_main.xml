<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:animateLayoutChanges="true"
    tools:context=".MainActivity">

    <View
        android:id="@+id/viewfocus"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/solidBlack"
        android:alpha="0"/>

    <TextView
        android:id="@+id/headerTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Pulsa"
        android:textSize="20sp"
        android:textColor="@color/solidBlack"/>

    <LinearLayout
        android:id="@+id/telpLL"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/headerTV"
        android:orientation="horizontal">
        <TextView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:text="Nomor HP"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" />
        <EditText
            android:id="@+id/telpET"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="27dp"
            android:hint="Nomor Handphone" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pulsaRV"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="100dp"
        android:layout_below="@+id/telpLL" />

    <LinearLayout
        android:id="@+id/bayarPulsa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/bayarPopUp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/cottonCandy">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/labelHarga"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="Harga : Rp"
                    android:textColor="@color/solidBlack"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/hargaTV"
                    android:layout_toRightOf="@id/labelHarga"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:textColor="@color/solidBlack"/>
                <Button
                    android:id="@+id/beliBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:background="@color/plumWeb"
                    android:text="Bayar"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textAllCaps="false"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>